<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Style -->
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ContentTextStyle" parent="TitleTextStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TinyContentTextStyle" parent="ContentTextStyle">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="CardTitleTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardContentTextStyle" parent="CardTitleTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <!-- Button Style -->
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Toolbar Style -->
    <style name="ToolbarStyle">
        <item name="android:background">?android:colorBackground</item>
        <item name="navigationIconTint">?colorPrimary</item>
        <item name="colorControlNormal">?colorPrimary</item>
    </style>
</resources>