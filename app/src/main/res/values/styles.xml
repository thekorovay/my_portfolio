<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTitleTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MainCardTitleTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NewsCardTitleTextStyle" parent="MainCardTitleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NewsCardDescriptionTextStyle" parent="NewsCardTitleTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MainSubtitleTextStyle" parent="MainTitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NewsTitleTextStyle" parent="MainTitleTextStyle">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ContentTextStyle" parent="NewsTitleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TinyContentTextStyle" parent="ContentTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
    </style>
</resources>