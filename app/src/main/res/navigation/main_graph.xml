<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.thekorovay.myportfolio.main.MainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainFragment_to_searchParamsFragment"
            app:destination="@id/searchParamsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.thekorovay.myportfolio.main.AboutFragment"
        android:label="@string/menu_about" />
    <fragment
        android:id="@+id/searchParamsFragment"
        android:name="com.thekorovay.myportfolio.news.fragments.SearchParamsFragment"
        android:label="@string/search_news">
        <action
            android:id="@+id/action_searchParamsFragment_to_searchResultsFragment"
            app:destination="@id/searchResultsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/readArticleFragment"
        android:name="com.thekorovay.myportfolio.news.fragments.ReadArticleFragment"
        android:label="@string/article" >
        <argument
            android:name="article"
            app:argType="com.thekorovay.myportfolio.news.Article" />
    </fragment>
    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="com.thekorovay.myportfolio.news.fragments.SearchResultsFragment"
        android:label="@string/search_results">
        <action
            android:id="@+id/action_searchResultsFragment_to_readArticleFragment"
            app:destination="@id/readArticleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="query"
            app:argType="string" />
        <argument
            android:name="safeSearchEnabled"
            app:argType="boolean" />
        <argument
            android:name="thumbnailsEnabled"
            app:argType="boolean" />
        <argument
            android:name="pageSize"
            app:argType="integer" />
    </fragment>
</navigation>